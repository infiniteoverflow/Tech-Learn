            android:layout_margin="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Android App Developer"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fontFamily="serif-monospace"
            android:text="Aswin Gopinathan\n2nd Year Cse,\nSir M. Visvesvaraya Institute of Technology"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:text="Web Portal Developers"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:paddingLeft="15dp"
            android:fontFamily="serif-monospace"
            android:paddingRight="15dp"
            android:text="Aditya Raman\n2nd Year Cse,\nSir M. Visvesvaraya Institute of Technology"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@android:color/black"
            android:fontFamily="serif-monospace"
            android:text="Harsh Gahlot\n2nd Year Cse,\nSir M. Visvesvaraya Institute of Technology"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Ayushi\n2nd Year Cse,\nSir M. Visvesvaraya Institute of Technology"
            android:textSize="25dp"
            android:textStyle="bold"
android:fontFamily="serif-monospace"
            android:paddingBottom="15dp"/>

